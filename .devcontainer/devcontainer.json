{
  "name": "sumisan-dev",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--network=sumisan-net"  // So the container can reach SQL container
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "postCreateCommand": "./setup_sumisan_dev.sh",
  "forwardPorts": [1434, 5000, 5001, 4200],
  "remoteEnv": {
    "ASPNETCORE_ENVIRONMENT": "Development"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.env.sumisan,target=/workspaces/sumisan/.env.sumisan,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/dotnet:1": {
      "version": "6.0"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {
      "version": "latest"
    }
  }
}
